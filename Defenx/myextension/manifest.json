{
  "manifest_version": 3,
  "name": "Website Defacement Detection and Response",
  "version": "2.0",
  "description": "Monitor websites for unauthorized changes and defacement",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ]
}